{
  "name": "roomsync-mobile",
  "version": "0.1.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start --clear",
    "android": "expo run:android --non-interactive",
    "ios": "expo run:ios --non-interactive",
    "web": "expo start --web",
    "test": "jest --passWithNoTests",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug --cleanup",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug --cleanup",
    "lint": "eslint \"src/**/*.{js,jsx}\" App.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@expo-google-fonts/poppins": "^0.2.2",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.10.1",
    "axios": "^1.7.7",
    "expo": "^53.0.0",
    "expo-constants": "^17.1.7",
    "expo-font": "~13.3.2",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.5",
    "expo-location": "~18.1.6",
    "expo-notifications": "~0.31.4",
    "expo-task-manager": "~13.1.6",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-maps": "1.20.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^4.5.2",
    "react-native-gesture-handler": "~2.24.0",
    "expo-blur": "~14.1.5",
    "expo-haptics": "~14.1.4",
    "@react-native-community/datetimepicker": "8.4.1",
    "expo-background-fetch": "~13.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/config-plugins": "~10.1.1",
    "json-schema-deref-sync": "^0.14.0",
    "metro": "^0.82.5",
    "metro-config": "^0.82.5",
    "metro-resolver": "^0.82.5",
    "@testing-library/react-native": "^12.6.1",
    "jest": "^29.7.0",
    "react-test-renderer": "19.0.0",
    "detox": "^20.18.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": ["<rootDir>/jest.setup.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-reanimated|expo|@expo|expo-.*|@react-navigation)/)"
    ]
  },
  "detox": {
    "testRunner": "jest",
    "configurations": {
      "ios.sim.debug": {
        "type": "ios.simulator",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/roomsync-mobile.app",
        "build": "expo run:ios --configuration Debug --non-interactive",
        "device": { "type": "iPhone 15" }
      },
      "android.emu.debug": {
        "type": "android.emulator",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "expo run:android --variant debug --non-interactive",
        "device": { "avdName": "Pixel_6_API_34" }
      }
    }
  }
}
