{
  "name": "roomsync-backend",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:prod": "cross-env NODE_ENV=production node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "seed": "node src/db/seed.js",
    "seed:wipe": "node src/db/seed.js --wipe",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "http": "0.0.1-security",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.8.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.56.0",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "compression": "^1.7.4",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "express-mongo-sanitize": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.1.0",
    "prettier": "^3.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/e2e/setup.testdb.js"
    ]
  }
}
